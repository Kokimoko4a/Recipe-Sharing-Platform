﻿@using RecipesSharingPlatform.Data.Models;
@model Recipe
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <h2>@Model.Title</h2>
    <p>Category: @Model.Category.Name</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title">
        </div>
        <div class="col-md-6">
            <h4>Ingredients</h4>
                <ul>
                @foreach (var ingredient in Model.Ingredients)
                {
                                <li>@ingredient.Name - @ingredient.Quantity@ingredient.TypeMeasurement</li>
                }
                </ul>
            <div class="my-3">
                <h4>Description</h4>
                <p>@Model.Description</p>
            </div>
            <div class="my-3">

            </div>
            <div class="my-3">
                <h4>Cooking Details</h4>
                <p>Cooking Type: @Model.CookingType.Name</p>
                <p>Cooking Time: @Model.CookingTime min.</p>
                <p>Preparing Time: @Model.PreparingTime min.</p>
                <p>Total Time: @Model.TotalTime min.</p>
                <p>Difficulty: @Model.Difficulty.Name</p>
                <p>Count of Portions: @Model.CountOfPortions</p>
                <p>Created On: @Model.CreatedOn.Date</p>
                <p>Author: @Model.Author!.Email</p>
            </div>
        </div>
    </div>
</div>