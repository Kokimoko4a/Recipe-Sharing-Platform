@using RecipeSharingPlatform.Web.ViewModels.Recipe;
@model List<RecipeViewModel>

@{
    ViewData["Title"] = "All Recipes";
}

<h2>All Recipes</h2>

<div class="row">
    @foreach (var recipe in Model)
    {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@recipe.ImageURL" class="card-img-top" alt="@recipe.Title">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Title</h5>
                       
                        <a asp-controller="Recipe" asp-action="ViewRecipe" asp-route-id="@recipe.Id" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
    }
</div>